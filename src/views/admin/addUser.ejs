<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>EOS Premier Bank</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="EOS Premier Bank" name="keywords" />
    <meta content="EOS Premier Bank" name="description" />

    <!-- Favicon -->
    <link href="../images/logo.jpg" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link
      href="../lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />
    <link
      href="../lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css"
      rel="stylesheet"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="../css/adminCss/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="../css/adminCss/style.css" rel="stylesheet" />
    <link href="../css/adminCss/adminform.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
      <!-- start header  -->
      <%- include (`../partials/adminHeader`); -%>
      <!-- end header -->

      <!-- Content Start -->
      <div class="content">
        <!-- Navbar revenue Start -->
        <%- include (`../partials/adminNav`); -%>
        <!-- Navbar and revenue End -->

        <!-- Recent Sales Start -->
        <div class="container-fluid pt-4 px-4">
          <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
              <h6 class="mb-0">Add New User</h6>
            </div>
            <div class="container">
              <form
                id="addNewUser"
                data-url="/admin/addUserPosted"
                method="post"
              >
                <div class="grid">
                  <div class="form-group a">
                    <label for="name">First Name</label>
                    <input name="firstName" class="centerText" type="text" />
                    <div id="firstNameError" class="error"></div>
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Last Name</label>
                    <input name="lastName" class="centerText" type="text" />
                    <div id="lastNameError" class="error"></div>
                  </div>

                  <div class="form-group email-group">
                    <label for="email">Email</label>
                    <input name="email" class="centerText" type="email" />
                    <div id="emailError" class="error"></div>
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Username</label>
                    <input name="username" class="centerText" type="text" />
                    <div id="usernameError" class="error"></div>
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Number</label>
                    <input
                      name="number"
                      class="centerText"
                      maxlength="13"
                      type="text"
                    />
                    <div id="numberError" class="error"></div>
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Password</label>
                    <input name="password" class="centerText" type="password" />
                    <div id="passwordError" class="error"></div>
                  </div>

                  <div class="form-group">
                    <label for="address">Adress</label>
                    <input name="address" class="centerText" type="text" />
                    <div id="addressError" class="error"></div>
                  </div>

                  <div class="form-group">
                    <label for="city">City</label>
                    <input name="city" class="centerText" type="text" />
                    <div id="cityError" class="error"></div>
                  </div>
                  <div class="form-group">
                    <label for="state">State</label>
                    <input name="state" class="centerText" type="text" />
                    <div id="stateError" class="error"></div>
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Savings Account Number</label>
                    <input
                      name="savingsAccountNumber"
                      maxlength="10"
                      class="centerText"
                      type="text"
                    />
                    <div id="savingsAccountNumberError" class="error"></div>
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Checking Account Number</label>
                    <input
                      name="checkingAccountNumber"
                      maxlength="10"
                      class="centerText"
                      type="text"
                    />
                    <div id="checkingAccountNumberError" class="error"></div>
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Saving Account Balance</label>
                    <input
                      name="savingAccountBalance"
                      class="centerText"
                      type="text"
                      placeholder="start with currency sign"
                    />
                    <div id="savingAccountBalanceError" class="error"></div>
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Checking Account Balance</label>
                    <input
                      name="checkingAccountBalance"
                      class="centerText"
                      type="text"
                      placeholder="start with currency sign"
                    />
                    <div id="checkingAccountBalanceError" class="error"></div>
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Pin</label>
                    <input name="pin" class="centerText" type="text" />
                    <div id="pinError" class="error"></div>
                  </div>
                </div>

                <div class="button-container">
                  <button id="submit_btn" class="btn btn-primary" name="submit">
                    Add User
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- Recent Sales End -->

        <!-- Footer Start -->
        <%- include (`../partials/adminFooter`); -%>
        <!-- Footer End -->
      </div>
      <!-- Content End -->

      <!-- Back to Top -->
      <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"
        ><i class="bi bi-arrow-up"></i
      ></a>
    </div>
  </body>
</html>
