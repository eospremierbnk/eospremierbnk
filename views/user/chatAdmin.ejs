<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>First Capitec Local Bank</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="First Capitec Local Bank" name="keywords" />
    <meta content="First Capitec Local Bank" name="description" />

    <!-- Favicon -->
    <link href="../images/logo.png" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link
      href="../lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />
    <link
      href="../lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css"
      rel="stylesheet"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="../css/adminCss/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="../css/adminCss/style.css" rel="stylesheet" />
    <link href="../css/adminCss/adminform.css" rel="stylesheet" />
    <link href="../css/adminCss/chatting.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
      <!-- start header  -->
      <%- include (`../partials/userHeader`); -%>
      <!-- end header -->

      <!-- Content Start -->
      <div class="content">
        <!-- Navbar revenue Start -->
        <%- include (`../partials/userNav`); -%>
        <!-- Navbar and revenue End -->

        <!-- Recent Sales Start -->
        <div class="container-fluid pt-4 px-4">
          <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
              <h6 class="mb-0">Message Admin</h6>
            </div>
            <div class="container p-0">
              <div class="wrapper">
                <div class="form">
                  <h4>GET IN TOUCH</h4>

                  <form
                    id="sendAdminMsgForm"
                    action="/user/ChatAdminPost"
                    method="post"
                  >
                    <p>
                      <input
                        id="name"
                        class="form-input"
                        type="text"
                        name="firstName"
                        placeholder="Your First Name*"
                      />
                      <small id="firstNameError" class="error"></small>
                    </p>
                    <p>
                      <input
                        id="name"
                        class="form-input"
                        type="text"
                        name="lastName"
                        placeholder="Your Last Name*"
                      />
                      <small id="lastNameError" class="error"></small>
                    </p>
                    <p class="full-width">
                      <textarea
                        maxlength="250"
                        id="message"
                        cols="30"
                        rows="7"
                        name="message"
                        placeholder="Your Message*"
                      ></textarea>
                      <small id="messageError" class="error"></small>
                    </p>

                    <div class="row form-group">
                      <div class="col-md-12">
                        <button
                          class="btn btn-primary py-2 px-4"
                          type="submit"
                          id="sendMessageButton"
                        >
                          Send Message
                        </button>
                      </div>
                    </div>
                  </form>
                  <div id="thankYouMessage" style="display: none">
                    Thank you, your message has been sent. A member of our team
                    will get back to you shortly.
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Recent Sales End -->

        <!-- Footer Start -->
        <%- include (`../partials/userFooter`); -%>
        <!-- Footer End -->
      </div>
      <!-- Content End -->

      <!-- Back to Top -->
      <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"
        ><i class="bi bi-arrow-up"></i
      ></a>
    </div>
  </body>
</html>
