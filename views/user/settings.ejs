<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>First Capitec Local Bank</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="First Capitec Local Bank" name="keywords" />
    <meta content="First Capitec Local Bank" name="description" />

    <!-- Favicon -->
    <link href="../images/logo.png" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link
      href="../lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />
    <link
      href="../lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css"
      rel="stylesheet"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="../css/adminCss/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="../css/adminCss/style.css" rel="stylesheet" />
    <link href="../css/adminCss/adminform.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
      <!-- start header  -->
      <%- include (`../partials/userHeader`); -%>
      <!-- end header -->

      <!-- Content Start -->
      <div class="content">
        <!-- Navbar revenue Start -->
        <%- include (`../partials/userNav`); -%>
        <!-- Navbar and revenue End -->

        <!-- Recent Sales Start -->
        <div class="container-fluid pt-4 px-4">
          <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
              <h6 class="mb-0">Edit Profile</h6>
            </div>
            <div class="container">
              <form
                id="EditProfileForm"
                data-url="/user/editUserProfile"
                method="post"
              >
                <div class="grid">
                  <div class="form-group a">
                    <label for="name">First Name</label>
                    <input
                      name="firstName"
                      class="centerText"
                      type="text"
                      value="<%= user.firstName%>"
                      readonly
                    />
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Last Name</label>
                    <input
                      name="lastName"
                      class="centerText"
                      type="text"
                      value="<%= user.lastName%>"
                      readonly
                    />
                  </div>

                  <div class="form-group email-group">
                    <label for="email">Email</label>
                    <input
                      name="email"
                      class="centerText"
                      type="email"
                      value="<%= user.email%>"
                      readonly
                    />
                  </div>

                  <div class="form-group b">
                    <label for="first-name">Username</label>
                    <input
                      name="username"
                      class="centerText"
                      type="text"
                      value="<%= user.username%>"
                      readonly
                    />
                  </div>

                  <div class="form-group">
                    <label for="address">Adress</label>
                    <input
                      name="address"
                      class="centerText"
                      type="text"
                      value="<%= user.address%>"
                      readonly
                    />
                  </div>

                  <div class="form-group">
                    <label for="city">City</label>
                    <input
                      name="city"
                      class="centerText"
                      type="text"
                      value="<%= user.city%>"
                      readonly
                    />
                  </div>

                  <div class="form-group">
                    <label for="state">State</label>
                    <input
                      name="state"
                      class="centerText"
                      type="text"
                      value="<%= user.state%>"
                      readonly
                    />
                  </div>

                  <div class="form-group">
                    <label for="old-password">Old Password</label>
                    <input
                      id="old-password"
                      name="oldPassword"
                      class="centerText"
                      type="password"
                      value=""
                    />
                  </div>

                  <div class="form-group">
                    <label for="new-password">New Password</label>
                    <input
                      id="new-password"
                      name="newPassword"
                      class="centerText"
                      type="password"
                      value=""
                    />
                  </div>
                </div>

                <div class="button-container">
                  <button id="submit_btn" class="btn btn-primary" name="submit">
                    Save Changes
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- Recent Sales End -->

        <!-- Footer Start -->
        <%- include (`../partials/userFooter`); -%>
        <!-- Footer End -->
      </div>
      <!-- Content End -->

      <!-- Back to Top -->
      <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"
        ><i class="bi bi-arrow-up"></i
      ></a>
    </div>
  </body>
</html>
